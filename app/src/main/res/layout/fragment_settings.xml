<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page"
    android:clickable="true"
    android:padding="20dp"
    tools:context="com.ollum.mazecape.Fragments.SettingsFragment">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/settings"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/headline" />

    <SeekBar
        android:id="@+id/seekBar_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView36"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:max="10"
        android:progress="0"
        android:splitTrack="false" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/music_volume"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar_music"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/sound_volume"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/text" />

    <SeekBar
        android:id="@+id/seekBar_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView39"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:max="10"
        android:progress="0"
        android:splitTrack="false" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar_sound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/controls"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/text" />

    <ToggleButton
        android:id="@+id/toggleButtonControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView40"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:background="#00000000"
        android:checked="false"
        android:text="Swipe"
        android:textColor="@color/colorTextDark"
        android:textOff="@string/touch"
        android:textOn="@string/swipe" />

    <ToggleButton
        android:id="@+id/toggleButtonInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView40"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:background="#00000000"
        android:checked="false"
        android:text="Swipe"
        android:textColor="@color/colorTextDark"
        android:textOff="@string/normal"
        android:textOn="@string/inverse" />

    <Button
        android:id="@+id/resetButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Reset Game"
        android:textColor="@color/colorTextDark" />

    <TextView
        android:id="@+id/settings_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="TextView"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/text" />

</RelativeLayout>
