<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainMenuFragment">

    <Button
        android:id="@+id/button_continue"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Continue"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_level_select"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Level Select"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_help"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_shop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Help"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:text="Developer Mode"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/button_shop"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_level_editor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Shop"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_level_editor"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_level_select"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Level Editor"
        android:textColor="#FFF"
        android:textSize="20dp" />

</RelativeLayout>
