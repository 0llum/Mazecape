<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_Container"
    android:layout_width="1000dp"
    android:layout_height="1000dp"
    android:layout_alignParentBottom="false"
    android:layout_alignParentLeft="false"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="false"
    tools:context=".Fragments.GameFragment">

    <GridView
        android:id="@+id/gridViewLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_gravity="bottom"
        android:horizontalSpacing="0dp"
        android:numColumns="5"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"/>

    <ImageView
        android:id="@+id/imageViewPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/pfup"/>

    <ImageView
        android:id="@+id/imageViewSandstorm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/sandstorm"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageViewDarkness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/darkness_00"/>

    <RelativeLayout
        android:id="@+id/header_black"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/imageViewDarkness"
        android:background="#000"/>

    <RelativeLayout
        android:id="@+id/footer_black"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/gridViewLevel"
        android:background="#000">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_UI"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/posX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="100"
            android:textColor="#fff"
            android:textSize="16dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/posY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/posX"
            android:layout_marginLeft="20dp"
            android:text="100"
            android:textColor="#fff"
            android:textSize="16dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/resetLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:text="Reset"
            android:textColor="#fff" />

        <ToggleButton
            android:id="@+id/controlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00000000"
            android:checked="false"
            android:text="Swipe"
            android:textColor="#fff"
            android:textOff="Swipe"
            android:textOn="Touch" />

        <Button
            android:id="@+id/cheatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:text="Cheat"
            android:textColor="#fff"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relative_layout_compass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/compass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/compass" />

                <ImageView
                    android:id="@+id/needle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/needle" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:contextClickable="false"
                android:focusable="false">

                <GridView
                    android:id="@+id/gridViewMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/map"
                    android:listSelector="#00000000"
                    android:numColumns="7"
                    android:padding="25dp"
                    android:stretchMode="columnWidth" />

                <ImageView
                    android:id="@+id/minimapPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/red_dot" />

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgSword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/navigation"
            android:layout_marginRight="5dp"
            android:src="@drawable/sword" />

        <ImageView
            android:id="@+id/imageStar1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/navigation"
            android:layout_marginLeft="5dp"
            android:src="@drawable/star_empty" />

        <ImageView
            android:id="@+id/imageStar2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/navigation"
            android:layout_toRightOf="@+id/imageStar1"
            android:src="@drawable/star_empty" />

        <ImageView
            android:id="@+id/imageStar3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/navigation"
            android:layout_toRightOf="@+id/imageStar2"
            android:src="@drawable/star_empty" />

    </RelativeLayout>


</RelativeLayout>
